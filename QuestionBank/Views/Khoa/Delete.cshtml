@model QuestionBank.Models.Khoa

@{
    ViewData["Title"] = "Delete";
}

<div class="container-form">
    <div class="header-section">
        <h1>Delete</h1>
        <h3>Bạn có chắc muốn xóa Khoa này không?</h3>
        
    </div>
    <hr />
    <dl class="row">
        <dt class="col-sm-3">Tên Khoa</dt>
        <dd class="col-sm-9">@Html.DisplayFor(model => model.TenKhoa)</dd>
        <dt class="col-sm-3">Trạng Thái</dt>
        <dd class="col-sm-9">@Html.DisplayFor(model => model.XoaTamKhoa)</dd>
    </dl>
    <form asp-action="Delete">
        <input type="hidden" asp-for="MaKhoa" />
        <input type="submit" value="Xóa Khoa" class="btn btn-danger" />
        
    </form>
    <div class="mt-3">
        <a asp-action="Index" class="btn btn-secondary">Trở Về</a>
    </div>
    
</div>
