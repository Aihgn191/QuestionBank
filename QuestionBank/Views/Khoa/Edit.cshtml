@model QuestionBank.Models.Khoa

@{
    ViewData["Title"] = "Edit";
}
<div class="container-form">
    <div class="header-section">
        <h1>Chỉnh Sửa Thông Tin Khoa</h1>     
    </div>
    <hr />
    <div class="row">
        <div class="col-md-12">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="MaKhoa" />
                <div class="form-group">
                    <label asp-for="TenKhoa" class="control-label">Tên Khoa</label>
                    <input asp-for="TenKhoa" class="form-control" />
                    <span asp-validation-for="TenKhoa" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="XoaTamKhoa" class="control-label">Trạng Thái</label>
                    <select asp-for="XoaTamKhoa" class="form-control">
                        <option value="true">True</option>
                        <option value="false">False</option>
                    </select>
                    <span asp-validation-for="XoaTamKhoa" class="text-danger"></span>
                </div>
                <div style="margin-top: 10px" class="form-group text-center">
                    <input type="submit" value="Save" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>
    <div class="mt-3">
        <a asp-action="Index" class="btn btn-secondary">Trở Về</a>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
