@model IEnumerable<QuestionBank.Models.Khoa>

@{
    ViewData["Title"] = "Index";
}


    

<div class="container-fluid" style="max-width: 1200px;">
    <div class="row">
        <div class="col-sm-3">
            <!-- Sidebar content -->
            <div class="sidebar">
                <h1>Quản lý</h1>
                <ul>
                    <li>
                        <a class="btn btn-primary" asp-controller="MonHoc" asp-action="Index">Quản lý môn học</a>
                    </li>
                </ul>
            </div>
        </div>
        <div class="col-sm-9">
            <div class="content-header">
                <h2>Danh sách Khoa</h2>
                <a class="btn btn-primary" asp-action="Create">Thêm Khoa</a>
            </div>
            <div class="rounded-columns">
                <div class="row">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>
                                    Tên khoa
                                </th>
                                <th>
                                    Trạng Thái (Không Sử Dụng)
                                </th>
                                <th style="padding-left:100px">Chức năng</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.TenKhoa)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.XoaTamKhoa)
                                    </td>
                                    <td>
                                        <a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.MaKhoa">Sửa</a>
                                        <a class="btn btn-primary" asp-action="Details" asp-route-id="@item.MaKhoa">Xem</a>
                                        <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.MaKhoa">Xóa</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>