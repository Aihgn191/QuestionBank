@model QuestionBank.Models.Khoa

@{
    ViewData["Title"] = "Create";
}

<style>
    

    .container-form {
        max-width: 600px;
        background-color: #f8f9fa;
        padding: 20px;
        border-radius: 8px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    }

        
</style>
<div class="container-form">
    <h1>Tạo khoa</h1>
    <hr />
    <div class="row">
        <div class="col-md-12">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="TenKhoa" class="control-label">Tên khoa</label>
                    <input asp-for="TenKhoa" class="form-control" />
                    <span asp-validation-for="TenKhoa" class="text-danger"></span>
                </div>
                <div style="margin-top: 10px" class="form-group text-center">
                    <input type="submit" value="Tạo Khoa" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>
    <div class="mt-3">
        <a asp-action="Index" class="btn btn-secondary">Trở Về</a>
    </div>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
