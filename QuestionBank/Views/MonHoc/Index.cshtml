@model IEnumerable<QuestionBank.Models.MonHoc>

@{
    ViewData["Title"] = "Index";
}


<div class="container" style="max-width:auto;">
    <div class="row">
        <div class="col-sm-3">
            <div class="sidebar">
                <h1>Quản lý</h1>
                <ul>
                    <li><a class="btn btn-primary w-100" asp-controller="Khoa" asp-action="Index">Quản lý khoa</a></li>
                    <li><a class="btn btn-primary w-100" asp-controller="Phan" asp-action="Index">Quản lý học phần</a></li>
                </ul>
            </div>
        </div>
        <div class="col-sm-9">
            <div class="content-header">
                <h2>Danh sách môn học</h2>
                <a class="btn btn-primary" asp-action="Create">Thêm Môn Học</a>
            </div>
            <div class="rounded-columns">
               
                <div class="row">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                
                                <th>Tên Môn Học</th>
                                <th>Trạng Thái (Không Sử Dụng)</th>
                                <th>Tên Khoa</th>
                                <th style="padding-left:100px">Chức năng</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    
                                    <td>@Html.DisplayFor(modelItem => item.TenMonHoc)</td>
                                    <td>@Html.DisplayFor(modelItem => item.XoaTamMonHoc)</td>
                                    <td>@Html.DisplayFor(modelItem => item.MaKhoaNavigation.TenKhoa)</td>
                                    <td>
                                        <a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.MaMonHoc">Sửa</a>
                                        <a class="btn btn-primary" asp-action="Details" asp-route-id="@item.MaMonHoc">Xem</a>
                                        <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.MaMonHoc">Xóa</a>
                                        <a class="btn btn-info" asp-area="Admin" asp-action="Index" asp-controller="MaTran" asp-route-id="@item.MaMonHoc">Tạo đề thi</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>