@model QuestionBank.Models.Phan

@{
    ViewData["Title"] = "Edit";
}

<div class="container-form">
    <div class="header-section">
        <h1>Chỉnh Sửa Thông Tin Phần</h1>
    </div>
    <hr />
    <div class="row">
        <div class="col-md-12">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="MaPhan" />
                
                <div class="form-group">
                    <label asp-for="MaMonHoc" class="control-label">Mã Môn Học</label>
                    <select asp-for="MaMonHoc" class="form-control" asp-items="ViewBag.MaMonHoc"></select>
                    <span asp-validation-for="MaMonHoc" class="text-danger"></span>
                </div>
                
                <div class="form-group">
                    <label asp-for="TenPhan" class="control-label">Tên Phần</label>
                    <input asp-for="TenPhan" class="form-control" />
                    <span asp-validation-for="TenPhan" class="text-danger"></span>
                </div>
                
                <div class="form-group">
                    <label asp-for="NoiDung" class="control-label">Nội Dung</label>
                    <input asp-for="NoiDung" class="form-control" />
                    <span asp-validation-for="NoiDung" class="text-danger"></span>
                </div>
                
                <div class="form-group" hidden>
                    <label asp-for="ThuTu" class="control-label"></label>
                    <input asp-for="ThuTu" class="form-control" />
                    <span asp-validation-for="ThuTu" class="text-danger"></span>
                </div>
                
                <div class="form-group" hidden>
                    <label asp-for="SoLuongCauHoi" class="control-label"></label>
                    <input asp-for="SoLuongCauHoi" class="form-control" />
                    <span asp-validation-for="SoLuongCauHoi" class="text-danger"></span>
                </div>
                
                <div class="form-group" hidden>
                    <label asp-for="MaPhanCha" class="control-label"></label>
                    <input asp-for="MaPhanCha" class="form-control" />
                    <span asp-validation-for="MaPhanCha" class="text-danger"></span>
                </div>
                
                <div class="form-group" hidden>
                    <label asp-for="MaSoPhan" class="control-label"></label>
                    <input asp-for="MaSoPhan" class="form-control" />
                    <span asp-validation-for="MaSoPhan" class="text-danger"></span>
                </div>
                
                <div class="form-group">
                    <label asp-for="XoaTamPhan" class="control-label">Trạng Thái</label>
                    <select asp-for="XoaTamPhan" class="form-control">
                        <option value="true">True</option>
                        <option value="false">False</option>
                    </select>
                    <span asp-validation-for="XoaTamPhan" class="text-danger"></span>
                </div>
                
                <div class="form-group form-check">
                    <label class="form-check-label">
                        <input class="form-check-input" asp-for="LaCauHoiNhom" /> @Html.DisplayNameFor(model => model.LaCauHoiNhom)
                    </label>
                </div>
                
                <div style="margin-top: 10px" class="form-group text-center">
                    <input type="submit" value="Save" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>
    <div class="mt-3">
        <a asp-action="Index" class="btn btn-secondary">Trở Về</a>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
