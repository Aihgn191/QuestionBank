@model QuestionBank.Models.CauHoi

<div class="container-form">
    <div class="header-section">
        <h1>Thêm File Câu Hỏi</h1>
    </div>
    <hr />
    <div class="row">
        <div class="col-md-12">
            <form asp-action="QuesFromFile" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-group">
                    <label asp-for="MaPhan" class="control-label">Mã Phần</label>
                    <select asp-for="MaPhan" name="maPhan" class="form-control" asp-items="ViewBag.MaPhan"></select>
                </div>

                @* <div class="form-group">
                <label asp-for="CloId" class="control-label">CLO</label>
                <select asp-for="CloId" class="form-control" asp-items="ViewBag.Clos"></select>
                </div> *@

                <div class="form-group">
                    <label for="fileUpload" class="control-label">Upload Word File</label>
                    <input type="file" name="fileUpload" class="form-control" accept=".doc,.docx" />
                </div>

                <div style="margin-top: 10px" class="form-group text-center">
                    <input type="submit" value="Lấy Câu Hỏi Từ File" class="btn btn-primary" />
                    @* <a class="btn btn-primary" asp-action="QuesFromFile"></a> *@
                </div>
            </form>

        </div>
    </div>

    <div class="mt-3">
        <a asp-action="Choose" class="btn btn-secondary">Trở về</a>
    </div>
</div>
