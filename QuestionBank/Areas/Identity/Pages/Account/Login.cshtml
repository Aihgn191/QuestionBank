<body class="text-center">
    <div class="form-signin" id="loginBox">
        <form id="account" method="post">
            <img class="mb-4" width="250px" src="https://erp1.hutech.edu.vn/assets/png/logo.png" alt="logo">
            <div id="abc"></div>
            <label class="h6 mb-3 fw-bold" style="text-align: left;">Vui lòng nhập mã tài khoản và mật khẩu để đăng nhập</label>
            <hr>
            <div class="form-floating">
                <input asp-for="Input.UserNameOrEmail" class="form-control" autocomplete="UserNameOrEmail" aria-required="true" placeholder="name@example.com" />
                <label for="floatingInput">Username</label>
                <span asp-validation-for="Input.UserNameOrEmail" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="password" />
                <label for="floatingPassword">Password</label>
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>

            <button class="w-100 btn btn-lg btn-primary mt-3" name="submit" type="submit">Đăng nhập</button>
        </form>
    </div>
    <script type="module" src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.esm.js"></script>
    <script nomodule src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.js"></script>
</body>
