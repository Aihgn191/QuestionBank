@model QuestionBank.Models.DeThi

@{
    ViewData["Title"] = "Delete";
}

<div class="container-form">
    <div class="header-section">
        <h1>Delete</h1>
        <h3>Bạn có chắc muốn xóa đề thi này không?</h3>
    </div>
    <hr />
    <dl class="row">
        <dt class="col-sm-3">
            Tên Đề Thi
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.TenDeThi)
        </dd>

        <dt class="col-sm-3">
            Ngày Tạo
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.NgayTao)
        </dd>

        <dt class="col-sm-3">
            Trạng Thái
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.DaDuyet)
        </dd>

        <dt class="col-sm-3">
            Môn Học
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.MaMonHocNavigation.TenMonHoc)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="MaDeThi" />
        <input type="submit" value="Xóa Đề Thi" class="btn btn-danger" />
    </form>
    <div class="mt-3">
        <a asp-action="Index" class="btn btn-secondary">Trở Về</a>
    </div>
</div>

