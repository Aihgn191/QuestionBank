@model QuestionBank.Models.CustomUser;

<div class="container-form">
    <div class="header-section">
        <h1>Chỉnh Sửa Role Người Dùng</h1>
    </div>
    <hr />
    <div class="row">
        <div class="col-md-12">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-group" hidden>
                    <label asp-for="Id" class="control-label">ID</label>
                    <input asp-for="Id" class="form-control" />
                    <span asp-validation-for="Id" class="text-danger"></span>
                </div>

                <div class="form-group">    
                    <label class="control-label">Role</label>
                    <select id="roleName" name="roleName" class="form-control">
                        @foreach (var role in ViewBag.Roles)
                        {
                            <option value="@role.Value">@role.Text</option>
                        }
                    </select>
                </div>

                <div style="margin-top: 10px" class="form-group text-center">
                    <input type="submit" value="Save" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>

    <div class="mt-3">
        <a asp-action="Index" class="btn btn-secondary">Trở Về</a>
    </div>
</div>
